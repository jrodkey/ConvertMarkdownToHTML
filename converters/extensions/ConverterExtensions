namespace ConvertMarkdownToHTML.converters.extensions
{
    public static class ConverterExtensions
    {
        /// <summary>
        /// 
        /// </summary>
        /// <param name="text"></param>
        /// <param name="index"></param>
        /// <returns></returns>
        public static string GetTokenReplacement(this char text, int index)
        {
            int incrementIndex = index + 1;
            StringBuilder sb = new StringBuilder();
            sb.Append(text[index]);
            while((text[incrementIndex] == text[index]) && (incrementIndex < text.Length))
            {
                sb.Append(text[incrementIndex++]);
            }
            
            return sb.ToString();
        }
    }
}